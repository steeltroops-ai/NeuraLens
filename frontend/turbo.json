{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "cache": true,
      "env": [
        "NEXT_PUBLIC_*",
        "NODE_ENV",
        "VERCEL_*",
        "ANALYZE"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": [
        "NEXT_PUBLIC_*",
        "NODE_ENV"
      ]
    },
    "start": {
      "dependsOn": ["build"],
      "cache": false,
      "persistent": true
    },
    "lint": {
      "outputs": [],
      "cache": true,
      "inputs": [
        "src/**/*.{js,jsx,ts,tsx}",
        ".eslintrc.json",
        "tsconfig.json"
      ]
    },
    "lint:fix": {
      "outputs": [],
      "cache": false,
      "inputs": [
        "src/**/*.{js,jsx,ts,tsx}",
        ".eslintrc.json",
        "tsconfig.json"
      ]
    },
    "type-check": {
      "outputs": [],
      "cache": true,
      "inputs": [
        "src/**/*.{ts,tsx}",
        "tsconfig.json",
        "next-env.d.ts"
      ]
    },
    "format": {
      "outputs": [],
      "cache": false,
      "inputs": [
        "src/**/*.{js,jsx,ts,tsx,json,md}",
        ".prettierrc"
      ]
    },
    "format:check": {
      "outputs": [],
      "cache": true,
      "inputs": [
        "src/**/*.{js,jsx,ts,tsx,json,md}",
        ".prettierrc"
      ]
    },
    "test": {
      "outputs": ["coverage/**"],
      "cache": true,
      "inputs": [
        "src/**/*.{js,jsx,ts,tsx}",
        "**/*.test.{js,jsx,ts,tsx}",
        "**/*.spec.{js,jsx,ts,tsx}",
        "jest.config.js",
        "tsconfig.json"
      ]
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "test:coverage": {
      "outputs": ["coverage/**"],
      "cache": true,
      "inputs": [
        "src/**/*.{js,jsx,ts,tsx}",
        "**/*.test.{js,jsx,ts,tsx}",
        "**/*.spec.{js,jsx,ts,tsx}",
        "jest.config.js",
        "tsconfig.json"
      ]
    },
    "clean": {
      "cache": false,
      "outputs": []
    },
    "analyze": {
      "dependsOn": ["build"],
      "outputs": [".next/analyze/**"],
      "cache": true,
      "env": ["ANALYZE"]
    }
  },
  "globalDependencies": [
    "package.json",
    "bun.lockb",
    ".env*",
    "next.config.js",
    "tailwind.config.js",
    "postcss.config.js"
  ],
  "globalEnv": [
    "NODE_ENV",
    "NEXT_PUBLIC_*"
  ]
}
