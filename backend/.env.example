# MediLens Backend Environment Configuration
# Copy to .env and fill in your values

# =============================================================================
# DATABASE
# =============================================================================
# Neon Postgres connection string
# Format: postgresql://user:password@host/database?sslmode=require
NEON_DATABASE_URL=postgresql://user:password@your-neon-host.neon.tech/medilens?sslmode=require

# Database pool configuration
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_ECHO=false

# =============================================================================
# APPLICATION
# =============================================================================
APP_NAME=MediLens API
VERSION=1.0.0
ENVIRONMENT=development
DEBUG=false

# =============================================================================
# CORS
# =============================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# AWS (for Polly TTS)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_DEFAULT_REGION=us-east-1

# Cerebras AI
CEREBRAS_API_KEY=your_cerebras_api_key

# ElevenLabs (optional for voice synthesis)
ELEVENLABS_API_KEY=your_elevenlabs_key

# =============================================================================
# PERFORMANCE
# =============================================================================
REQUEST_TIMEOUT=60.0
WORKER_THREADS=4
CACHE_TTL=3600
CACHE_MAX_SIZE=100

# Audio processing
MAX_AUDIO_SIZE=10485760  # 10MB in bytes
AUDIO_TIMEOUT=30.0

# =============================================================================
# SERVERLESS DETECTION
# =============================================================================
# These are auto-detected but can be set manually
# VERCEL=1
# AWS_LAMBDA_FUNCTION_NAME=your-function-name
