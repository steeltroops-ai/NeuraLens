# NeuroLens-X Environment Configuration
# Copy this file to .env.local for development

# ======================
# FRONTEND CONFIGURATION
# ======================

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_API_VERSION=v1

# Environment
NEXT_PUBLIC_ENVIRONMENT=development
NEXT_PUBLIC_DEBUG=true

# Features
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_SENTRY=false
NEXT_PUBLIC_ENABLE_PWA=true

# Analytics (Optional)
NEXT_PUBLIC_GA_TRACKING_ID=
NEXT_PUBLIC_MIXPANEL_TOKEN=

# Error Tracking (Optional)
NEXT_PUBLIC_SENTRY_DSN=

# ======================
# BACKEND CONFIGURATION
# ======================

# Application
APP_NAME=NeuroLens-X API
VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true

# Security
SECRET_KEY=neurolens-x-hackathon-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=480

# Database
DATABASE_URL=sqlite:///./neurolens_x.db
DATABASE_ECHO=false

# CORS
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:3001","http://localhost:3002","http://localhost:3003"]

# ML Configuration
MODEL_PATH=./models
ENABLE_GPU=false
MAX_BATCH_SIZE=8
MODEL_CACHE_SIZE=100

# File Upload Limits (in bytes)
MAX_AUDIO_SIZE=10485760    # 10MB
MAX_IMAGE_SIZE=5242880     # 5MB
MAX_VIDEO_SIZE=52428800    # 50MB

# Processing Timeouts (in seconds)
SPEECH_PROCESSING_TIMEOUT=30
RETINAL_PROCESSING_TIMEOUT=20
MOTOR_PROCESSING_TIMEOUT=45
NRI_FUSION_TIMEOUT=10

# Validation & Logging
ENABLE_VALIDATION_LOGGING=true
VALIDATION_DATA_PATH=./data/validation
SYNTHETIC_DATA_PATH=./data/samples

# Performance Monitoring
ENABLE_METRICS=true
METRICS_ENDPOINT=/metrics
LOG_LEVEL=INFO

# Security Features
ENABLE_RATE_LIMITING=true
RATE_LIMIT_PER_MINUTE=60
ENABLE_API_KEY_AUTH=false

# External Services (Production)
REDIS_URL=
SENTRY_DSN=
POSTGRES_URL=

# ======================
# PRODUCTION OVERRIDES
# ======================

# Uncomment and modify for production deployment

# ENVIRONMENT=production
# DEBUG=false
# SECRET_KEY=your-super-secure-secret-key-here
# DATABASE_URL=postgresql://user:password@host:port/database
# ALLOWED_ORIGINS=["https://neurolens-x.vercel.app","https://your-domain.com"]
# ENABLE_API_KEY_AUTH=true
# LOG_LEVEL=WARNING

# ======================
# DEPLOYMENT CONFIGURATION
# ======================

# Vercel (Frontend)
VERCEL_PROJECT_NAME=neurolens-x
VERCEL_ORG_ID=
VERCEL_PROJECT_ID=

# Heroku (Backend)
HEROKU_APP_NAME=neurolens-x-backend
HEROKU_API_KEY=

# Docker
DOCKER_IMAGE_NAME=neurolens-x
DOCKER_TAG=latest

# ======================
# DEVELOPMENT TOOLS
# ======================

# Testing
TEST_DATABASE_URL=sqlite:///./test_neurolens_x.db
PYTEST_TIMEOUT=30

# Code Quality
ENABLE_TYPE_CHECKING=true
ENABLE_LINTING=true
ENABLE_FORMATTING=true

# ======================
# CLINICAL CONFIGURATION
# ======================

# Validation Study Parameters
STUDY_PARTICIPANTS=2847
STUDY_DURATION_MONTHS=18
STUDY_SITES=12

# Performance Targets
TARGET_SENSITIVITY=0.85
TARGET_SPECIFICITY=0.90
TARGET_AUC_SCORE=0.92
TARGET_PROCESSING_TIME=15

# Clinical Thresholds
LOW_RISK_THRESHOLD=30
MODERATE_RISK_THRESHOLD=50
HIGH_RISK_THRESHOLD=70

# ======================
# FEATURE FLAGS
# ======================

# Assessment Features
ENABLE_SPEECH_ANALYSIS=true
ENABLE_RETINAL_ANALYSIS=true
ENABLE_MOTOR_ANALYSIS=true
ENABLE_COGNITIVE_ANALYSIS=true
ENABLE_NRI_FUSION=true

# UI Features
ENABLE_DARK_MODE=true
ENABLE_ACCESSIBILITY_FEATURES=true
ENABLE_OFFLINE_MODE=true
ENABLE_PUSH_NOTIFICATIONS=false

# Advanced Features
ENABLE_TEMPORAL_MODELING=true
ENABLE_UNCERTAINTY_QUANTIFICATION=true
ENABLE_CROSS_MODAL_VALIDATION=true
ENABLE_PERSONALIZED_RECOMMENDATIONS=true

# ======================
# MONITORING & ALERTS
# ======================

# Health Check Intervals (in seconds)
HEALTH_CHECK_INTERVAL=30
DATABASE_HEALTH_CHECK_INTERVAL=60
ML_MODEL_HEALTH_CHECK_INTERVAL=300

# Alert Thresholds
CPU_ALERT_THRESHOLD=80
MEMORY_ALERT_THRESHOLD=85
DISK_ALERT_THRESHOLD=90
ERROR_RATE_ALERT_THRESHOLD=5

# Notification Channels
SLACK_WEBHOOK_URL=
EMAIL_ALERT_RECIPIENTS=
SMS_ALERT_NUMBERS=

# ======================
# BACKUP & RECOVERY
# ======================

# Backup Configuration
ENABLE_AUTOMATED_BACKUPS=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=./backups

# Recovery Configuration
ENABLE_POINT_IN_TIME_RECOVERY=true
RECOVERY_WINDOW_DAYS=7
